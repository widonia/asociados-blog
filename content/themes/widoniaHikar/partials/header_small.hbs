<header class="main-header second-header {{#if @blog.cover}}" style="background-image:  url({{@blog.cover}}){{else}}no-cover{{/if}}" >
	<figure class="logo">
		{{#if @blog.logo}}<a href="{{@blog.url}}"><img class="img-logo" src="{{@blog.logo}}" alt="Logo Blog"></a>{{/if}}
	</figure>
	<div class="title">
		<a href="{{@blog.url}}">
            <h1>{{@blog.title}}</h1>
		</a>
	</div>
</header>
